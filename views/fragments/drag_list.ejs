<section class="section">
	<h1>Kanban Drag and Drop Interface Layout</h1>
</section>

<script src='https://cdnjs.cloudflare.com/ajax/libs/dragula/3.7.3/dragula.min.js'></script>
<div class="drag-container">
	<ul class="drag-list">
		<li class="drag-column drag-column-on-hold">
			<span class="drag-column-header">
				<h2>Sons</h2>
			</span>

			<div class="drag-options" id="options1"></div>
			<div class="drag-column-main-list">
				<ul class="drag-inner-list" id="1">
					<li class="drag-item"></li>
					<li class="drag-item"></li>
				</ul>
			</div>
		</li>
		<div class="drag-column-square drag-column-in-progress" style="height: auto; width: auto;">
			<span class="drag-column-header">
				<h2>Soundboard</h2>
			</span>
			<li style=" height: auto; width: auto;">
				<div>
					<ul class="drag-column-square-1 drag-inner-list">
						<div id="2">
							<li class="drag-item drag-item-square">a</li>
						</div>
						<div id="3">
							<li class="drag-item drag-item-square">b</li>
						</div>
						<div id="4">
							<li class="drag-item drag-item-square">c</li>
						</div>
					</ul>
					<ul class="drag-column-square-1 drag-inner-list" id="3">
						<li class="drag-item">d</li>
						<li class="drag-item">e</li>
						<li class="drag-item">f</li>
					</ul>
					<ul class="drag-column-square-1 drag-inner-list" id="4">
						<li class="drag-item"></li>
						<li class="drag-item"></li>
						<li class="drag-item"></li>
					</ul>
			</li>
		</div>
		<li class="drag-column drag-column-needs-review">
			<span class="drag-column-header">
				<h2>Needs Review</h2>
			</span>
			<div class="drag-options" id="options3"></div>
			<ul class="drag-inner-list" id="3">
				<li class="drag-item"></li>
				<li class="drag-item"></li>
				<li class="drag-item"></li>
				<li class="drag-item"></li>
			</ul>
		</li>
		<li class="drag-column drag-column-approved">
			<span class="drag-column-header">
				<h2>Approved</h2>
			</span>
			<div class="drag-options" id="options4"></div>
			<ul class="drag-inner-list" id="4">
				<li class="drag-item"></li>
				<li class="drag-item"></li>
			</ul>
		</li>
	</ul>
</div>
<script src="js/drag_list.js"></script>
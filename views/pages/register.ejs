<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Diamssword | Register</title>
    <link href="https://fonts.googleapis.com/css?family=Lemonada&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="icon" type="image/png" href="assets/logo/logo-drive-innov-blanc.png" />
    <%- include('../fragments/head.ejs')  %> 
    <%- include('../partials/messages.ejs')  %> 
</head>

<body>
    <header>        <%- include('../fragments/header.ejs')  %> </header>
    <div style="display:flex;">
        <img src="assets/images/head.png">
        <div >
        <h1>Diamssword</h1>
        <h3>Ruining the Internet since 1666</h3>
        </div>
    </div>
    <main class="main_connexion">
        <div class="container">
            <div class="login-container">
                <form method="POST" id="log_form">
                    <h2>Creer un compte</h2>
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-user"></i>
                        </div>
                        <div>
                            <input class="input" name="name" id="email" type="text" placeholder="Pseudo">
                        </div>
                    </div>
                    <div class="input-div two">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div>
                            <input class="input" name="password" type="password" placeholder="Mot de passe">
                        </div>
                        <input class="input" name="confirm" type="password" placeholder="Confirmer MDP">
                    </div>
                    <div class="btn-1" onclick="document.forms['log_form'].submit();">
                        Creer le compte
                    </div>
                </form>
            </div>
        </div>
        <script text="text/javascript" src="connexion.js"></script>
    </main>

</body>
<script>
    const urlParams = new URLSearchParams(window.location.search);
    const myParam = urlParams.get('redirect');
    if(myParam)
    {
        setTimeout(() => {
            window.location="/login";
        }, 3000);
    }
</script>
</html>
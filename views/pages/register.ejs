<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Code de la route | DrivInnov</title>
    <link href="https://fonts.googleapis.com/css?family=Lemonada&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="icon" type="image/png" href="assets/logo/logo-drive-innov-blanc.png" />

    <%- include('../partials/messages.ejs')  %> 
</head>

<body>
    <header></header>
    <main class="main_connexion">
        <div class="container">
            <div class="login-container">
                <form method="POST">
                    <img class="avatar" src="assets/svg/profile.svg">
                    <h2>Creer un compte</h2>
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-user"></i>
                        </div>
                        <div>
                            <input class="input" name="name" id="email" type="text" placeholder="Pseudo">
                        </div>
                    </div>
                    <div class="input-div two">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div>
                            <input class="input" name="password" type="password" placeholder="Mot de passe">
                            <input class="input" name="confirm" type="password" placeholder="Confirmer">
                        </div>
                    </div>
                    <a href="reset_MDP.ejs">Mot de passe oublier ?</a>
                    <input type="submit" class="btn" value="Se connecter">
                </form>
            </div>
        </div>
        <script text="text/javascript" src="connexion.js"></script>
    </main>

</body>

</html>